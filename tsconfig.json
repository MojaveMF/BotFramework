{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",
    "skipLibCheck": true,                          
    "rootDir": "src",
    "downlevelIteration": true,
    "sourceMap": false,
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    

  
  
  }
  ,
  "include": [
    "**/src"
  ],
  "exclude": [
    "**/node_modules",
    "**/obfuscated"
  ]
}